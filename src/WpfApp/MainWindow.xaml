<Window
    x:Class="WpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding AddListCommand}"
                Content="Add List" />
            <Button
                Margin="0,0,10,0"
                Command="{Binding RemoveListCommand}"
                Content="Remove List" />
            <Button
                Margin="0,0,10,0"
                Command="{Binding AddDictCommand}"
                Content="Add Dict" />
            <Button
                Margin="0,0,10,0"
                Command="{Binding AddHashSetCommand}"
                Content="Add HashSet" />
            <Button
                Margin="0,0,10,0"
                Command="{Binding AddQueueCommand}"
                Content="Add Queue" />
            <Button Command="{Binding AddStackCommand}" Content="Add Stack" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  List  -->
            <StackPanel Grid.Column="0">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="List" />
                <ListBox ItemsSource="{Binding List}">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu
                                        MinWidth="170"
                                        Padding="0,5"
                                        FontSize="12">
                                        <MenuItem
                                            Command="{Binding RemoveListCommand}"
                                            Header="Remove"
                                            Icon="&#xe711;" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
            <!--  Dictionary  -->
            <StackPanel Grid.Column="1">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Dictionary" />
                <ListBox ItemsSource="{Binding Dict}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,5,0" Text="{Binding Key}" />
                                <TextBlock Text=":" />
                                <TextBlock Margin="5,0,0,0" Text="{Binding Value}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <!--  HashSet  -->
            <StackPanel Grid.Column="2">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="HashSet" />
                <ListBox ItemsSource="{Binding HashSet}" />
            </StackPanel>
            <!--  Queue  -->
            <StackPanel Grid.Column="3">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Queue" />
                <ListBox ItemsSource="{Binding Queue}" />
            </StackPanel>
            <!--  Stack  -->
            <StackPanel Grid.Column="4">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Stack" />
                <ListBox ItemsSource="{Binding Stack}" />
            </StackPanel>
            <!--  ObservableViewList (View over List)  -->
            <StackPanel Grid.Column="5">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="View (List)" />
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <TextBox
                        Width="60"
                        Margin="0,0,4,0"
                        Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                        ToolTip="Filter: Name contains this text" />
                    <Button
                        Margin="0,0,4,0"
                        Command="{Binding AttachFilterCommand}"
                        Content="Filter" />
                    <Button
                        Margin="0,0,4,0"
                        Command="{Binding ResetFilterCommand}"
                        Content="Reset Filter" />
                </StackPanel>
                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                    <Button
                        Margin="0,0,4,0"
                        Command="{Binding SortViewCommand}"
                        Content="Sort" />
                    <Button
                        Command="{Binding ResetSortCommand}"
                        Content="Reset Sort" />
                </StackPanel>
                <ListBox ItemsSource="{Binding ViewList}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
